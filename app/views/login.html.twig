{% extends 'layouts/account.html.twig' %}

{% set title = 'login'|trans %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-body">
            {% form_theme form 'bootstrap_3_layout.html.twig' %}
            {{ form_start(form) }}
                {{ form_row(form._token) }}
            {{ form_end(form) }}
        </div>
        <div class="panel-footer">
            <p class="text-right no-margin-bottom">{{ 'login_help'|trans({'%link%': path('forgot_password')})|raw }}</p>
        </div>
    </div>
{% endblock %}
